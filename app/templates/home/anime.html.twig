{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Anime{% endblock %}

{% block content %}
    
    <div class="cards">
        {% for anime in animes %}
            <div onclick="window.location.href='{{ path('app_anime_view', { 'id': anime.id }) }}'" class="cardView">
                <div class="cardImage" style="background: url({{ asset('img/views/'~ anime.picture) }});background-size: cover;border-radius: 5px 5px 0 0;height: 15rem;box-shadow: inset hsla(0, 0, 0, .2) 0 64px 64px 16px;background-position: center;"></div>
                <div class="cardBody">
                    <h5>{{ anime.name }}</h5>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
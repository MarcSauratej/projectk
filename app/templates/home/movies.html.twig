{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Pel√≠culas{% endblock %}

{% block content %}
    
    <div class="cards">
        {% for movie in movies %}
            <div onclick="window.location.href='{{ path('app_movies_view', { 'id': movie.id }) }}'" class="cardView">
                <div class="cardImage" style="background: url({{ asset('/img/views/'~ movie.picture) }});" aria-label="Imagen de {{ movie.title }}"></div>
                <div class="cardBody">
                    <h5>{{ movie.name }}</h5>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
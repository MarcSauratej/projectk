{% extends 'home/components/layout.html.twig' %}

{% block title %}Project Kakarot - Recompensas{% endblock %}

{% block content %}
    
    <div class="containerh">
        <div class="quizes">
            {% for reward in rewards %}
                <div id="cardQuiz">
                    <div class="oneQuiz">
                        <div class="card-body">
                            <div class="category categoryReward">
                                <h3 class="card-title rewardTitle">{{ reward.name }}</h3>
                            </div>
                            <div class="rewardDescription">
                                <p>{{ reward.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="myModal" class="modal">
                    <div class="modal-content" id="#rewardModal">
                        <div class="modal-header-reward">
                            <span class="close">&times;</span>
                            <h2>Â¡Recoge tu recompensa!</h2>
                        </div>
                        <div class="modal-body">
                            <img src="/img/views/{{ reward.image }}" class="imgcard" alt="Imagen de {{ reward.name }}">
                            <p>{{ reward.name }}</p>
                        </div>
                        <a class="Btn btnPrimary">CONFIRMAR</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        var modal = document.querySelectorAll("#myModal");
        var btn = document.querySelectorAll("#cardQuiz");
        var span = document.querySelectorAll(".close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
{% endblock %}
